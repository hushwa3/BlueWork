@model BlueWork.web.Models.WorkerProfile
@{
    ViewData["Title"] = "Edit Profile";
}

<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var modelState in ViewData.ModelState.Values)
            {
                @foreach (var error in modelState.Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md p-6">
        <h1 class="text-2xl font-bold mb-6">Edit Worker Profile</h1>
        <form asp-action="EditProfile" method="post">
            <input type="hidden" asp-for="UserId" />
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="form-group">
                    <label asp-for="LocationCity" class="block text-sm font-medium text-gray-700">Location City</label>
                    <input asp-for="LocationCity" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200" />
                    <span asp-validation-for="LocationCity" class="text-red-500 text-sm"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Speciality" class="block text-sm font-medium text-gray-700">Speciality</label>
                    <input asp-for="Speciality" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200" />
                    <span asp-validation-for="Speciality" class="text-red-500 text-sm"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Languages" class="block text-sm font-medium text-gray-700">Languages</label>
                    <input asp-for="Languages" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200" />
                    <span asp-validation-for="Languages" class="text-red-500 text-sm"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Education" class="block text-sm font-medium text-gray-700">Education</label>
                    <input asp-for="Education" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200" />
                    <span asp-validation-for="Education" class="text-red-500 text-sm"></span>
                </div>

                <div class="form-group">
                    <label asp-for="course" class="block text-sm font-medium text-gray-700">Course</label>
                    <input asp-for="course" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200" />
                </div>

                <div class="form-group">
                    <label asp-for="year" class="block text-sm font-medium text-gray-700">Graduation Year</label>
                    <input asp-for="year" type="number" min="2000" max="@DateTime.Now.Year" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200" />
                    <span asp-validation-for="year" class="text-red-500 text-sm"></span>
                </div>

                <div class="form-group">
                    <label asp-for="HoursPerWeek" class="block text-sm font-medium text-gray-700">Hours per Week</label>
                    <input asp-for="HoursPerWeek" type="number" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200" />
                    <span asp-validation-for="HoursPerWeek" class="text-red-500 text-sm"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Offer" class="block text-sm font-medium text-gray-700">Offer Status</label>
                    <select asp-for="Offer" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200">
                        <option value="Not Open">Not Open</option>
                        <option value="Open">Open</option>
                    </select>
                    <span asp-validation-for="Offer" class="text-red-500 text-sm"></span>
                </div>

                <div class="form-group">
                    <label asp-for="responseTime" class="block text-sm font-medium text-gray-700">Response Time (Days)</label>
                    <input asp-for="responseTime" type="number" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200" />
                    <span asp-validation-for="responseTime" class="text-red-500 text-sm"></span>
                </div>
            </div>

            <div class="mt-6">
                <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 transition duration-300">
                    Save Profile
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
