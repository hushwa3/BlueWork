@model BlueWork.web.Models.AddPostModel.InputModel

@{
    ViewData["Title"] = "Add Post";
}
<form asp-action="AddPost" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- Headline Section -->
    <div class="container my-5 d-flex justify-content-center align-items-center">
        <div class="card card-post" id="headline-card" style="min-height: 55vh; width: 20vw;">
            <div class="card-body">
                <div class="progress mb-3">
                    <div class="progress-bar bg-success" style="width: 25%;">Headline</div>
                </div>
                <h4 class="card-title">Write a strong headline</h4>
                <p>This helps your job post stand out to the right candidates.</p>
                <div class="form-group">
                    <label for="headline-input">Job Headline</label>
                    <input asp-for="Headline" class="form-control" placeholder="Enter headline" />
                    <span asp-validation-for="Headline" class="text-danger"></span>
                </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="button" class="btn btn-primary" id="next-skills">Next: Skills</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Skills Section -->
    <div class="container my-5 d-flex justify-content-center align-items-center" style="display: none;" id="skills-card">
        <div class="card card-post" style="min-height: 45vh; width: 20vw;">
            <div class="card-body">
                <div class="progress mb-3">
                    <div class="progress-bar bg-success" style="width: 50%;">Skills</div>
                </div>
                <h4 class="card-title">What skills are required?</h4>
                <div class="form-group">
                    <label for="skills-input">Enter Skills</label>
                    <textarea asp-for="Skills" class="form-control" placeholder="e.g., Python, Design, Project Management"></textarea>
                    <span asp-validation-for="Skills" class="text-danger"></span>
                </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="button" class="btn btn-primary" id="next-scope">Next: Scope</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scope Section -->
    <div class="container my-5 d-flex justify-content-center align-items-center" style="display: none;" id="scope-card">
        <div class="card card-post" style="min-height: 60vh; width: 20vw;">
            <div class="card-body">
                <div class="progress mb-3">
                    <div class="progress-bar bg-success" style="width: 75%;">Scope</div>
                </div>
                <h4 class="card-title">Define the scope of your work</h4>
                <div class="form-group">
                    <label>Complexity</label>
                    <div class="form-check">
                        <input asp-for="Complexity" type="radio" value="Small" class="form-check-input" />
                        <label class="form-check-label">Small</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Complexity" type="radio" value="Medium" class="form-check-input" />
                        <label class="form-check-label">Medium</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Complexity" type="radio" value="Large" class="form-check-input" />
                        <label class="form-check-label">Large</label>
                    </div>
                </div>
                <div class="form-group">
                    <label>Duration</label>
                    <div class="form-check">
                        <input asp-for="Duration" type="radio" value="<1 month" class="form-check-input" />
                        <label class="form-check-label">Less than 1 month</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Duration" type="radio" value="1-3 months" class="form-check-input" />
                        <label class="form-check-label">1-3 months</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Duration" type="radio" value="3-6 months" class="form-check-input" />
                        <label class="form-check-label">3-6 months</label>
                    </div>
                </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="button" class="btn btn-primary" id="next-budget">Next: Budget</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Budget Section -->
    <div class="container my-5 d-flex justify-content-center align-items-center" style="display: none;" id="budget-card">
        <div class="card card-post" style="min-height: 45vh; width: 20vw;">
            <div class="card-body">
                <div class="progress mb-3">
                    <div class="progress-bar bg-success" style="width: 100%;">Budget</div>
                </div>
                <h4 class="card-title">Specify your budget</h4>
                <div class="form-group">
                    <label>Hourly Rate</label>
                    <div class="d-flex">
                        <input asp-for="HourlyRateFrom" class="form-control me-2" placeholder="From" />
                        <input asp-for="HourlyRateTo" class="form-control" placeholder="To" />
                    </div>
                    <span asp-validation-for="HourlyRateFrom" class="text-danger"></span>
                    <span asp-validation-for="HourlyRateTo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Project Budget</label>
                    <input asp-for="ProjectBudget" class="form-control" placeholder="Enter budget" />
                    <span asp-validation-for="ProjectBudget" class="text-danger"></span>
                </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary">Submit Job Post</button>
                </div>
            </div>
        </div>
    </div>
</form>

<script>
    document.getElementById('next-skills').addEventListener('click', function () {
        toggleCards('headline-card', 'skills-card');
    });

    document.getElementById('next-scope').addEventListener('click', function () {
        toggleCards('skills-card', 'scope-card');
    });

    document.getElementById('next-budget').addEventListener('click', function () {
        toggleCards('scope-card', 'budget-card');
    });

    function toggleCards(hideId, showId) {
        document.getElementById(hideId).style.display = 'none';
        document.getElementById(showId).style.display = 'block';
    }
</script>
