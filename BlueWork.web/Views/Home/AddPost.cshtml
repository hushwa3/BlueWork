@{
    ViewData["Title"] = "Add Post";
}
<div class="container my-5 d-flex justify-content-center align-items-center">
    <div class="card card-post" style="min-height: 55vh; width: 20vw; display: none; z-index: 9999;" id="headline-card">
        <div class="card-body p-4 d-flex flex-column" id="headline-section">
            <div class="content-card text-light rounded p-4 mb-4">
                <div class="progress mb-3">
                    <div class="progress-bar bg-success" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%;">
                        Headline
                    </div>
                    <div class="progress-bar" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%;">
                        Skills
                    </div>
                    <div class="progress-bar" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%;">
                        Scope
                    </div>
                    <div class="progress-bar" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%;">
                        Budget
                    </div>
                </div>
                <h4 class="card-title">Let's start with a strong headline</h4>
                <p class="card-text">This helps your job post stand out to the right candidates. It's the first thing they'll see, so make it count!</p>
            </div>
            <div class="mb-3 flex-grow-1">
                <label for="headline-input" class="form-label">Write a headline for your job post</label>
                <input type="text" class="form-control mb-5" id="headline-input" placeholder="Enter headline">
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="button" class="btn btn-primary" id="next-skills">Next: Skills</button>
            </div>
        </div>
    </div>
</div>

<div class="container my-5 d-flex justify-content-center align-items-center">
    <div class="card card-post" style="min-height: 45vh; width: 20vw; display: none; z-index: 9999;" id="skills">
        <div class="card-body p-4 d-flex flex-column" id="headline-section">
            <div class="content-card text-light rounded p-4 mb-4" styles="height: 30vh;">
                <div class="progress mb-3">
                    <div class="progress-bar bg-success" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%;">
                        Headline
                    </div>
                    <div class="progress-bar bg-success" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%;">
                        Skills
                    </div>
                    <div class="progress-bar" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%;">
                        Scope
                    </div>
                    <div class="progress-bar" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%;">
                        Budget
                    </div>
                </div>
                <h4 class="card-title">What are the main skills required for your work?</h4>
            </div>
            <div class="mb-3 flex-grow-1">
                <label for="headline-input" class="form-label">Search Skills or add your own</label>
                <input type="text" class="form-control" style="margin-bottom: 7rem;" placeholder="Search skills">
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="button" class="btn btn-primary" id="next-scope">Next: Scope</button>
            </div>
        </div>
    </div>
</div>

<div class="container my-5 d-flex justify-content-center align-items-center">
    <div class="card card-post" style="min-height: 60vh; width: 20vw; display: none; z-index: 9999;" id="scope">
        <div class="card-body p-4 d-flex flex-column" id="headline-section">
            <div class="content-card text-light rounded p-4 mb-4" styles="height: 30vh;">
                <div class="progress mb-3">
                    <div class="progress-bar bg-success" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%;">
                        Headline
                    </div>
                    <div class="progress-bar bg-success" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%;">
                        Skills
                    </div>
                    <div class="progress-bar bg-success" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%;">
                        Scope
                    </div>
                    <div class="progress-bar" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%;">
                        Budget
                    </div>
                </div>
                <h4 class="card-title mb-5">Next, estimate the scope of your work</h4>
                <p>Consider the size of your project and the time it will take.</p>
            </div>
            <div class="mb-5 d-flex gap-2 form-scope justify-content-center">
                <div class="form-group">
                    <label class="form-label fw-bold">Complexity</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="complexity" id="large" value="large">
                        <label class="form-check-label" for="large">Large</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="complexity" id="medium" value="medium">
                        <label class="form-check-label" for="medium">Medium</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="complexity" id="small" value="small">
                        <label class="form-check-label" for="small">Small</label>
                    </div>
                </div>

                <!-- Duration Group -->
                <div class="form-group">
                    <label class="form-label fw-bold">Duration</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="duration" id="threeToSix" value="3-6 months">
                        <label class="form-check-label" for="threeToSix">3 - 6 months</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="duration" id="oneToThree" value="1-3 months">
                        <label class="form-check-label" for="oneToThree">1 - 3 months</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="duration" id="lessThanOne" value="<1 month">
                        <label class="form-check-label" for="lessThanOne">&lt; 1 month</label>
                    </div>
                </div>

                <!-- Experience Group -->
                <div class="form-group">
                    <label class="form-label fw-bold">Experience</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="experience" id="entry" value="entry">
                        <label class="form-check-label" for="entry">Entry</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="experience" id="intermediate" value="intermediate">
                        <label class="form-check-label" for="intermediate">Intermediate</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="experience" id="expert" value="expert">
                        <label class="form-check-label" for="expert">Expert</label>
                    </div>
                </div>
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="button" class="btn btn-primary" id="next-budget">Next: Budget</button>
            </div>
        </div>
    </div>
</div>