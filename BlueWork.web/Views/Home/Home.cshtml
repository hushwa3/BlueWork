@{
    ViewData["Title"] = "BlueWork";
}

<div class="first-page container-fluid">
    <section class="hero">
        <div class="hero-content">
            <h1>Get connected with the right freelance talent in seconds!</h1>
            <div class="search-bar d-sm-flex flex-xs-column">
                <input type="text" placeholder="What skill are you looking for?">
                <button class="search-btn">Search</button>
            </div>
            <div class="categories">
                <span>Popular categories:</span>
                <span class="category-tag">Plumbing</span>
                <span class="category-tag">Construction</span>
                <span class="category-tag">Electronics</span>
                <span class="category-tag">Carpenter</span>
            </div>
        </div>
    </section>

    <section class="features container-fluid">
        <div class="d-grid">
            <div class="row">
                <div class="col first">
                    <h1>The best part? <span class="everything"> Everything.</span></h1>
                    <div class="d-grid gap-5">
                        <div class="row first-row">
                            <div class="row">
                                <div class="col">
                                    <h5><i class="fa-solid fa-circle-check"></i> Stick to your budget</h5>
                                    <p>Discover the ideal service that fits within your budget range with project-based pricing,
                                        without any hourly rates.</p>
                                </div>
                                <div class="col">
                                    <h5><i class="fa-solid fa-circle-check"></i> Pay when you’re happy.</h5>
                                    <p>When you receive upfront quotes, you can avoid unexpected surprises. 
                                        Payments will only be released upon your approval.
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="row">
                                    <div class="col">
                                        <h5><i class="fa-solid fa-circle-check"></i> Get quality work done quickly</h5>
                                        <p>
                                            Entrust your project to a skilled freelancer and achieve enduring outcomes in just minutes.
                                        </p>
                                    </div>
                                    <div class="col">
                                        <h5><i class="fa-solid fa-circle-check"></i> Count on 24/7 support.</h5>
                                        <p>
                                            Our support team is available 24/7 to assist you anytime and from anywhere.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col second">

                </div>
            </div>
        </div>
    </section>


