@model BlueWork.web.Models.WorkerProfile

@{
    ViewData["Title"] = "Profile";
}
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<div class="container h-screen overflow-y-auto padding-bottom padding-top">
    <div class="max-w-3xl mx-auto bg-white rounded-lg shadow p-6 border border-light">
        <div class="flex items-start gap-4 mb-6">
            <img src="/assets/default-pp.png" alt="Profile" class="w-20 h-20 rounded-full bg-gray-200" />
            <div class="flex-1">
                <div class="flex justify-between items-start">
                    <div>
                        <h1 class="text-xl font-bold">@ViewData["FirstName"] @ViewData["LastName"]</h1>
                        <div class="flex items-center text-gray-600 text-sm">
                            <i class="fas fa-map-marker-alt mr-1"></i>
                            <span>@Model.LocationCity</span>
                        </div>
                        <div class="flex gap-2 mt-2">
                            <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded">Available Now</span>
                            <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded">Rising Talent</span>
                        </div>
                    </div>
                    <div class="flex gap-2">
                        <a asp-controller="Home" asp-action="EditProfile" class="px-4 py-2 text-blue-600 border border-blue-600 rounded">Edit Profile</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="grid grid-cols-2 gap-6">
            <div class="space-y-6">
                <div>
                    <div class="text-sm text-l font-bold">@Model.Speciality</div>
                </div>

                <div>
                    <h2 class="font-semibold mb-2">@Model.HoursPerWeek Hours per week</h2>
                    <div class="bg-gray-100 p-3 rounded">
                        <div class="text-sm">@Model.Offer to offers</div>
                        <div class="text-sm">@Model.responseTime day(s) response time</div>
                    </div>
                </div>

                <div class="grid grid-cols-3 gap-4 mb-6">
                    <div class="text-center">
                        <div class="text-2xl font-bold">₱-</div>
                        <div class="text-sm text-gray-600">Total Earnings</div>
                    </div>
                    <div class="text-center">
                        <div class="text-2xl font-bold">-</div>
                        <div class="text-sm text-gray-600">Total Jobs</div>
                    </div>
                    <div class="text-center">
                        <div class="text-2xl font-bold">-</div>
                        <div class="text-sm text-gray-600">Total Hours</div>
                    </div>
                </div>

                <div>
                    <h2 class="font-semibold mb-2">Languages</h2>
                    <div class="bg-gray-100 p-3 rounded space-y-2">
                        <div class="text-sm">@Model.Languages</div>
                    </div>
                </div>

                <div>
                    <h2 class="font-semibold mb-2">Education</h2>
                    <div class="bg-gray-100 p-3 rounded space-y-4">
                        <div>
                            <div class="text-sm font-medium">@Model.Education</div>
                            <div class="text-sm text-gray-500">@Model.course</div>
                            <div class="text-sm text-gray-500">@Model.year</div>
                        </div>
                    </div>
                </div>
            </div>

            <div>
                <h2 class="text-xl font-bold mb-4">Work History</h2>
                <div class="space-y-4">
                    <div class="border rounded p-4">
                        <div class="flex mb-2">
                            <h3 class="font-semibold">No Jobs Completed yet</h3>
                            <div class="items-center">
                                <i class="fas fa-star text-gray-400"></i>
                                <i class="fas fa-star text-gray-400"></i>
                                <i class="fas fa-star text-gray-400"></i>
                                <i class="fas fa-star text-gray-400"></i>
                                <i class="fas fa-star text-gray-400"></i>
                                <span class="ml-1">0.00</span>
                            </div>
                        </div>
                        <p class="text-sm text-gray-600 mb-2">Job duration</p>
                        <p class="text-sm mb-2">
                            "No jobs to show"
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>