@{
    ViewData["Title"] = "Registration";
}

<div class="container-fluid container-pop4" id="pop3" style="display: none;">
    <div class="content2 text-center">
        <h5 style="overflow-y: hidden;">Join <br> Bluework</h5>
        <div class="buttons">
            <button class="btn google pop2-btn"><i class="fa-brands fa-google fa-b"></i><a class="nav-link text-light" asp-area="" asp-controller="Login" asp-action="Login">Continue with Google</a></button>
            <button class="btn apple pop2-btn"><i class="fa-brands fa-apple fa-b"></i> Continue with Apple</button>
        </div>
        <div class="line-container">
            <hr class="line">
            <span class="line-text">OR</span>
            <hr class="line">
        </div>
        <form class="email-container" asp-action="" asp-controller=" " method="post">
            <input class="register mb-2" type="text" placeholder="Enter your First name">
            <input class="register mb-2" type="text" placeholder="Enter your Last name">
            <input class="register mb-2" type="email" placeholder="Enter your email">
            <input class="register mb-4" type="password" placeholder="Enter your password">
            <button class="btn continue2 mb-4">Register</button>
            <p class="member1"><input class="form-check-input" type="checkbox" value="" id="flexCheckDefault"> By joining I agree to receive emails from BlueWork</p>
        </form>
    </div>
</div>