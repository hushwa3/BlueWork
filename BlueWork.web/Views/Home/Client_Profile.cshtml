@{
    ViewData["Title"] = "BlueWork";
}
<!-- Profile Setup Form -->
<body class="client">
<div class="client-container">
<div class="profile-setup-container">
    <form>
        <!-- Basic Information Section -->
        <div class="section-title">Basic Information</div>

        <div class="row mb-4">
            <div class="col-12 mb-3">
                <label class="form-label">Full Name</label>
                <div class="row">
                    <div class="col-md-4">
                        <input type="text" class="form-control" placeholder="First Name">
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control" placeholder="Middle Name">
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control" placeholder="Last Name">
                    </div>
                </div>
            </div>

            <div class="col-12 mb-3">
                <label class="form-label">Contact Number</label>
                <div class="row">
                    <div class="col-md-4">
                        <input type="tel" class="form-control" placeholder="Area Code">
                    </div>
                    <div class="col-md-8">
                        <input type="tel" class="form-control" placeholder="Phone Number">
                    </div>
                </div>
            </div>

            <div class="col-12 mb-3">
                <label class="form-label">Date of Birth</label>
                <div class="col-md-4 w-100">
                    <input type="date" class="form-control" placeholder="Month">
                </div>
            </div>
        </div>

        <!-- Company Information Section -->
        <div class="section-title">COMPANY INFORMATION</div>

        <div class="row mb-4">
            <div class="col-md-6 mb-3">
                <label class="form-label">Company Name</label>
                <input type="text" class="form-control">
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label">Company Description</label>
                <textarea class="form-control" rows="3"></textarea>
            </div>

            <div class="col-12 mb-3">
                <label class="form-label">Industry</label>
                <input type="text" class="form-control">
                <div class="form-hint">What type of sector does your company operate?</div>
            </div>

            <div class="col-12 mb-3">
                        <label for="country" class="form-label">Choose your country:</label>
                        <select id="country" name="country">
                            <option value="">Philippines</option>
                            <option value="">United States</option>
                        </select>
            </div>
        </div>

        <!-- Profile Picture Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="section-title mb-0">Profile Picture</div>
                <input class type="file" name="photo" value="Choose Photo" />
            </div>
        </div>

        <!-- Submit Button -->
        <div class="text-center mt-5">
            <button type="submit" class="submit-btn">SUBMIT</button>
        </div>
    </form>
</div>
</div>

</body>