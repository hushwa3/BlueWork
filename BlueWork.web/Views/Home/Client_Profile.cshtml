@{
    ViewData["Title"] = "BlueWork";
}
<!-- Profile Setup Form -->
<div class="profile-setup-container">
    <form>
        <!-- Basic Information Section -->
        <div class="section-title">Basic Information</div>

        <div class="row mb-4">
            <div class="col-12 mb-3">
                <label class="form-label">Full Name</label>
                <div class="row">
                    <div class="col-md-4">
                        <input type="text" class="form-control" placeholder="First Name">
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control" placeholder="Middle Name">
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control" placeholder="Last Name">
                    </div>
                </div>
            </div>

            <div class="col-12 mb-3">
                <label class="form-label">Contact Number</label>
                <div class="row">
                    <div class="col-md-4">
                        <input type="text" class="form-control" placeholder="Area Code">
                    </div>
                    <div class="col-md-8">
                        <input type="text" class="form-control" placeholder="Phone Number">
                    </div>
                </div>
            </div>

            <div class="col-12 mb-3">
                <label class="form-label">Date of Birth</label>
                <div class="row">
                    <div class="col-md-4">
                        <input type="text" class="form-control" placeholder="Month">
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control" placeholder="Day">
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control" placeholder="Year">
                    </div>
                </div>
            </div>
        </div>

        <!-- Company Information Section -->
        <div class="section-title">COMPANY INFORMATION</div>

        <div class="row mb-4">
            <div class="col-md-6 mb-3">
                <label class="form-label">Company Name</label>
                <input type="text" class="form-control">
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label">Company Description</label>
                <textarea class="form-control" rows="3"></textarea>
            </div>

            <div class="col-12 mb-3">
                <label class="form-label">Industry</label>
                <input type="text" class="form-control">
                <div class="form-hint">What type of sector does your company operate?</div>
            </div>

            <div class="col-12 mb-3">
                <label class="form-label">Location</label>
                <input type="text" class="form-control" placeholder="State">
            </div>
        </div>

        <!-- Profile Picture Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="section-title mb-0">Profile Picture</div>
                    <button type="button" class="choose-btn">Choose Photo</button>
                </div>
                <div class="form-hint">No File Chosen</div>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="text-center mt-5">
            <button type="submit" class="submit-btn">SUBMIT</button>
        </div>
    </form>
</div>
