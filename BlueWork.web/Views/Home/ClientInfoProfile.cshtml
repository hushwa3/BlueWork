@model BlueWork.web.Models.ClientProfile

@{
    ViewData["Title"] = "Client Info Profile"; 
    var firstName = ViewData["FirstName"] as string ?? "N/A";
    var lastName = ViewData["LastName"] as string ?? "N/A";
}
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<body class="bg-light">
    <!-- Main Content -->
    <div class="container py-5">
        <div class="profile-card">
            
                <!-- Profile Header -->
                <div class="d-flex justify-content-between align-items-start mb-4">
                    <div class="d-flex gap-3">
                        <i class="fa-solid fa-circle-user fa-5x"></i>
                        <div>
                            <h1 class="h3 mb-1">@Model.CompanyName ?? "Company Name Not Set"</h1>
                            <p class="text-muted mb-2">
                                <i class="fas fa-map-marker-alt me-2"></i>@Model.Location ?? "Location Not Set"
                            </p>
                            <div class="d-flex gap-2">
                                <span class="badge badge-custom status-badge">
                                    <i class="fas fa-check-circle me-1"></i>
                                    Payment Verified: @Model.PaymentVerification ? "Yes" : "No"
                                </span>
                                <span class="badge badge-custom bg-success">Active</span>
                            </div>
                        </div>
                    </div>
                    <a asp-action="EditClientProfile" class="btn btn-primary">
                        <i class="fas fa-edit me-2"></i>Edit Profile
                    </a>
                </div>

                <!-- Company Info -->
                <div class="row mb-4">
                    <div class="col-md-8">
                        <h5 class="mb-3">About the Company</h5>
                        <p class="text-muted">
                            @Model.Description ?? "Company description not available."
                        </p>
                    </div>
                </div>

                <!-- Stats Grid -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="company-stats">
                            <h6 class="text-muted mb-2">Project Budget Range</h6>
                            <h4 class="mb-0">$50K - $250K</h4>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="company-stats">
                            <h6 class="text-muted mb-2">Projects Completed</h6>
                            <h4 class="mb-0">128</h4>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="company-stats">
                            <h6 class="text-muted mb-2">Total Spent</h6>
                            <h4 class="mb-0">$1.2M+</h4>
                        </div>
                    </div>
                </div>

                <!-- Additional Info -->
                <div class="row">
                    <div class="col-md-6">
                        <h5 class="mb-3">Company Details</h5>
                        <div class="mb-4">
                            <p class="mb-2"><strong>Company Size:</strong> @Model.CompanySize ?? "Not Set"</p>
                            <p class="mb-2"><strong>Industry:</strong> @Model.Industry ?? "Not Set"</p>
                            <p class="mb-2"><strong>Client Name:</strong> @($"{firstName} {lastName}")</p>
                            <p class="mb-2"><strong>Email:</strong> @Model.Email ?? "Not Set"</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h5 class="mb-3">Rating & Reviews</h5>
                        <div class="mb-4">
                            <div class="d-flex align-items-center mb-2">
                                <div class="star-rating me-2">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star-half-alt"></i>
                                </div>
                                <span class="h4 mb-0">4.8</span>
                            </div>
                            <p class="text-muted">Based on 47 contractor reviews</p>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}