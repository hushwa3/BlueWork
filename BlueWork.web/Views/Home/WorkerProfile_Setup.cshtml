@{
    ViewData["Title"] = "Worker Profile";
}
<body class="client">
    <div class="client-container">
        <div class="profile-setup-container">
            <form>
                <!-- Basic Information Section -->
                <div class="section-title">Basic Information</div>

                <div class="row mb-4">
                    <div class="col-12 mb-3">
                        <label class="form-label">Full Name</label>
                        <div class="row">
                            <div class="col-md-6">
                                <input type="text" class="form-control" placeholder="First Name">
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control" placeholder="Last Name">
                            </div>
                        </div>
                    </div>

                    <div class="col-12 mb-3">
                        <label class="form-label">Work email address</label>
                        <div class="row">
                            <div class="col-md-4 w-100">
                                <input type="email" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="col-12 mb-3">
                        <label class="form-label">Password</label>
                        <div class="col-md-4 w-100">
                            <input type="password" class="form-control" placeholder="Password (8 or more characters)">
                        </div>
                    </div>
                </div>

                <!-- Company Information Section -->
                <div class="section-title">JOB INFORMATION</div>

                <div class="row mb-4">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Work Title</label>
                        <p style="color: #ccc; font-size: 12px;">What is the title you wish to be displayed for potential employers?</p>
                        <input type="text" class="form-control">
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Company Description</label>
                        <p style="color: #ccc; font-size: 12px;">Describe the nature of your work.</p>
                        <textarea class="form-control" rows="3"></textarea>
                    </div>
                </div>

                <!-- Profile Picture Section -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="section-title mb-0">Profile Picture</div>
                        <input class type="file" name="photo" value="Choose Photo" />
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="text-center mt-5">
                    <button type="submit" class="submit-btn"> <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Client_Dashboard">SUBMIT</a></button>
                </div>
            </form>
        </div>
    </div>

</body>

   