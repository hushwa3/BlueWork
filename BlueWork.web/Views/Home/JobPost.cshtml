
@{
    ViewData["Title"] = "Job Post";
}

<div class="container mt-5">
    <!-- Title -->
    <h2 class="mb-4">Borj Khalifa Skyscraper Construction</h2>

    <!-- Progress Bar -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <div class="flex-grow-1">
                    <div class="progress" style="height: 7vh;">
                        <div class="job-post progress-bar bg-primary fs-6" style="width: 33%;">
                            Your Job Postings
                        </div>
                        <div class="job-post progress-bar bg-white text-dark border-start border-end fs-6" style="width: 33%;">
                            <a class="navbar-brand text-dark fs-6" asp-area="" asp-controller="Home" asp-action="ReviewProposal">Review Proposals</a>
                        </div>
                        <div class="job-post progress-bar bg-white text-dark fs-6" style="width: 34%;">
                            <a class="navbar-brand text-dark fs-6" asp-area="" asp-controller="Home" asp-action="ReviewProposal">Hire</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="row">
        <!-- Left Column -->
        <div class="col-md-8 mt-5">
            <div class="card mb-4">
                <div class="card-body rounded">
                    <h5 class="card-title">Skyscraper Construction</h5>
                    <p class="text-muted">Created 69 hours ago</p>
                    <p class="text-muted">Philippines</p>

                    <div class="mt-4">
                        <p>Good day, everyone!</p>
                        <p>
                            As a project owner seeking to hire a skilled and reliable construction worker, I am in search of a dedicated
                            professional who can bring their expertise and contribute to the success of my construction project.
                        </p>

                        <p>
                            If you are a construction worker who takes pride in their work, demonstrates professionalism, and has a strong work ethic,
                            I would be thrilled to connect with you and discuss how you can be an integral part of my construction project.
                        </p>
                        <p>Thanks!</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column -->
        <div class="col-md-4">
            <div class="card mt-5">
                <div class="card-body rounded">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h5 class="card-title">About the client</h5>
                            <p class="text-success mb-1">PAYMENT METHOD VERIFIED</p>
                            <p class="mb-1">Philippines</p>
                            <p class="mb-3">Cebu City</p>
                        </div>
                        <img src="/api/placeholder/80/80" alt="Client avatar" class="rounded-circle">
                    </div>

                    <hr>

                    <div class="mt-3">
                        <p class="mb-1">1 job posted</p>
                        <p class="mb-1">0% hire rate</p>
                        <p class="mb-1">1 open job</p>
                        <p class="mb-1">Construction</p>
                        <p class="mb-1">Member since June 9, 2059</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>