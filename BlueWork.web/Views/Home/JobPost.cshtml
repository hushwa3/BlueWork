@model BlueWork.web.Models.JobPost

@{
    ViewData["Title"] = "Job Post";
}

<div class="container mt-5">
    <!-- Title -->
    <h2 class="mb-4">Your Job Posting</h2>

    <!-- Progress Bar -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <div class="flex-grow-1">
                    <div class="progress" style="height: 7vh;">
                        <div class="job-post progress-bar bg-primary fs-6" style="width: 33%;">
                            Your Job Postings
                        </div>
                        <div class="job-post progress-bar bg-white text-dark fs-6" style="width: 33%;">
                            <a href="@Url.Action("ReviewProposal", "Home", new { jobId = Model.Id })" class="navbar-brand text-dark fs-6" >
                                Review Proposals
                            </a>
                        </div>
                       
                        <div class="job-post progress-bar bg-white text-dark fs-6" style="width: 34%;">
                            <a class="navbar-brand text-dark fs-6" asp-area="" asp-controller="Home" asp-action="Hire">Hire</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

   
    <!-- Main Content -->
    <div class="row">
        <!-- Left Column -->
        <div class="col-md-12 mt-5 mb-4">
            <div class="card mb-4">
                    <div class="card-body rounded">
                        <h2 class="card-title">@Model.Headline</h2>
                        <p class="text-muted">Created 69 hours ago</p>
                        <p class="text-muted">Philippines</p>
                        <hr />
                        <div class="mt-4">
                        <p>@Model.Description</p>
                        </div>
                        <hr/>
                    <div class="row">
                        <div class="col-md-4">
                            <p><i class="fa-solid fa-check-to-slot"></i> Complexity: @Model.Complexity</p>
                        </div>
                        <div class="col-md-4">
                            <p><i class="fa-solid fa-check-to-slot"></i> Duration: @Model.Duration</p>
                        </div>
                        <div class="col-md-4">
                            <p><i class="fa-solid fa-check-to-slot"></i> Experience: @Model.Experience</p>
                        </div>
                        <div class="col-md-4 mt-3">
                            <p><i class="fa-solid fa-clock"></i> Hourly Rate: ₱@Model.HourlyRateFrom - ₱@Model.HourlyRateTo</p>
                        </div>
                        <div class="col-md-4 mt-3">
                            <p><i class="fa-solid fa-clock"></i> Project Budget:  ₱@Model.ProjectBudget</p>
                        </div>
                    </div>
                    <hr />
                    <div>
                        <p>Skills required:</p>
                        <button type="button" class="btn text-light rounded"> @Model.Skills</button>
                    </div>
                </div>
                 
            </div>
        </div>
    </div>
</div>