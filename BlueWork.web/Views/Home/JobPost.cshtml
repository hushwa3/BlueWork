@model List<BlueWork.web.Models.JobPost>
@{
    ViewData["Title"] = "Job Post";
}

<div class="container mt-5">
    <!-- Title -->
    <h2 class="mb-4">Job Title</h2>

    <!-- Progress Bar -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <div class="flex-grow-1">
                    <div class="progress" style="height: 7vh;">
                        <div class="job-post progress-bar bg-primary fs-6" style="width: 33%;">
                            Your Job Postings
                        </div>
                        <div class="job-post progress-bar bg-white text-dark border-start border-end fs-6" style="width: 33%;">
                            <a class="navbar-brand text-dark fs-6" asp-area="" asp-controller="Home" asp-action="ReviewProposal">Review Proposals</a>
                        </div>
                        <div class="job-post progress-bar bg-white text-dark fs-6" style="width: 34%;">
                            <a class="navbar-brand text-dark fs-6" asp-area="" asp-controller="Home" asp-action="ReviewProposal">Hire</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="row">
        <!-- Left Column -->

        <div class="col-md-8 mt-5">
             @if (Model != null && Model.Any())
            {
            <div class="card mb-4">
                    @foreach (var job in Model)
                    {
                    <div class="card-body rounded">
                            <h5 class="card-title">@job.Headline</h5>
                        <p class="text-muted">Created 69 hours ago</p>
                        <p class="text-muted">Philippines</p>
                        <hr />
                        <div class="mt-4">
                                <p>@job.Description</p>
                        </div>
                        <hr/>
                    <div class="row">
                        <div class="col-md-4">
                            <p><i class="fa-solid fa-check-to-slot"></i> Complexity</p>
                        </div>
                        <div class="col-md-4">
                            <p><i class="fa-solid fa-check-to-slot"></i> Duration</p>
                        </div>
                        <div class="col-md-4">
                            <p><i class="fa-solid fa-check-to-slot"></i> Experience</p>
                        </div>
                        <div class="col-md-4 mt-3">
                            <p><i class="fa-solid fa-clock"></i> Hourly Rate: ₱@job.HourlyRateFrom - ₱@job.HourlyRateTo</p>
                        </div>
                        <div class="col-md-4 mt-3">
                            <p><i class="fa-solid fa-clock"></i> Project Budget:  ₱@job.ProjectBudget</p>
                        </div>
                    </div>
                    <hr />
                    <div>
                        <p>Skills required:</p>
                        <button type="button" class="btn text-light rounded"> @job.Skills</button>
                    </div>
                </div>
                }
            </div>
            }
        </div>

        <!-- Right Column -->
        <div class="col-md-4">
            <div class="card mt-5">
                <div class="card-body rounded">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h5 class="card-title">About the client</h5>
                            <p class="text-success mb-1">PAYMENT METHOD VERIFIED</p>
                            <p class="mb-1">Philippines</p>
                            <p class="mb-3">Cebu City</p>
                        </div>
                        <img src="/api/placeholder/80/80" alt="Client avatar" class="rounded-circle">
                    </div>

                    <hr>

                    <div class="mt-3">
                        <p class="mb-1">1 job posted</p>
                        <p class="mb-1">0% hire rate</p>
                        <p class="mb-1">1 open job</p>
                        <p class="mb-1">Construction</p>
                        <p class="mb-1">Member since June 9, 2059</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>