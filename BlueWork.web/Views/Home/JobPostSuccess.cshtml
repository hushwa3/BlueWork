@{
    ViewData["Title"] = "Success";
    Layout = null; // Optional: Don't use your site layout for a standalone pop-up
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="refresh" content="5;url=@Url.Action("JobPost", "Home")" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <script>
        // Auto-close the window after 5 seconds
        setTimeout(() => {
            window.location.href = "@Url.Action("Client_Dashboard", "Home")";
        }, 5000);
    </script>
</head>
<body class="d-flex justify-content-center align-items-center vh-100">
    <div class="text-center p-5">
        <img src="assets/congratulations.png" alt="" class="congrats mb-3">
        <h1 class="mb-3 title"> Congratulations! Your job post is now live!</h1>
        <p class="mt-3 text-muted">Redirecting you back in 5 seconds...</p>
    </div>
</body>
</html>
