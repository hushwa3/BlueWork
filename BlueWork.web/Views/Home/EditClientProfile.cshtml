@model BlueWork.web.Models.ClientProfile

@{
    ViewData["Title"] = "Edit Profile";
}

<body class="bg-light">
    <div class="container py-5">
        <div class="form-card bg-white p-4 mx-auto" style="max-width: 800px;">
            <h1 class="h3 mb-4 text-center">Edit Profile</h1>

            @if (Model != null)
            {
                <form asp-action="EditClientProfile" method="post">
                    @Html.AntiForgeryToken()
                    <input asp-for="UserId" type="hidden" />

                    <!-- Personal Information Section -->
                    <div class="mb-4">
                        <h2 class="h5 mb-3">Personal Information</h2>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="ClientName" class="form-label">Client Name</label>
                                <input asp-for="ClientName" class="form-control" placeholder="Enter your full name" aria-describedby="ClientNameValidation" />
                                <span id="ClientNameValidation" asp-validation-for="ClientName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" type="email" placeholder="Enter your email" aria-describedby="EmailValidation" />
                                <span id="EmailValidation" asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Company Information Section -->
                    <div class="mb-4">
                        <h2 class="h5 mb-3">Company Information</h2>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="CompanyName" class="form-label">Company Name</label>
                                <input asp-for="CompanyName" class="form-control" placeholder="Enter your company name" />
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Location" class="form-label">Location</label>
                                <input asp-for="Location" class="form-control" placeholder="Enter your location" />
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Description" class="form-label">Company Description</label>
                                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter a brief description"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Payment Verification Section -->
                    <div class="mb-4">
                        <h2 class="h5 mb-3">Payment Verification</h2>
                        <div class="form-check">
                            <input asp-for="PaymentVerification" type="checkbox" class="form-check-input" />
                            <label asp-for="PaymentVerification" class="form-check-label">Payment Verified</label>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-primary">Save Profile</button>
                    </div>
                </form>
            }
            else
            {
                <div class="alert alert-danger">
                    Profile data is not available. Please try again later.
                </div>
            }
        </div>
    </div>
</body>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
